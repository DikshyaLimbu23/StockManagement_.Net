@model Category


@{
    ViewData["Title"] = "CategoryList";
}

<h1>ProductList</h1>
<div>
    <form asp-action="GetCategoryList" asp-controller="Admin" data-ajax="true" data-ajax-method="get" data-ajax-update="#Productlist">
        <select asp-for="CateId" asp-items="@ViewBag.cat">
            <option value=""> All Categories </option>
        </select>
        <input type="submit" value="search" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" />
    </form>
    <div id="Productlist">
    </div>
</div>